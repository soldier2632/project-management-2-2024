extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  +alert-error(5000)
  h1(class="mb-4") Thêm mới sản phẩm
  
  form(
      action = `${prefixAdmin}/products/create`
      id="form-create-product"
      method="POST"
      enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
          type="text"
          id="title"
          name="title"
          class="form-control"
          placeholder="Nhập tiêu đề sản phẩm"
         
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
          rows="5"
          id="desc"
          name="description"
          class="form-control"
      )
    div(class="form-group")
      label(for="title") Giá
      input(
          type="number"
          id="price"
          name="price"
          class="form-control"
          value="0"
          min="0"
      ) 
    div(class="form-group")
      label(for="discount") % Giảm giá
      input(
          type="number"
          id="discount"
          name="discountPercentage"
          class="form-control"
          value="0"
          min="0"
      )   
    div(class="form-group")
      label(for="stock") Số lượng
      input(
          type="number"
          id="stock"
          name="stock"
          class="form-control"
          value="0"
          min="0"
      )  
    div(class="form-group"
        upload-image
    )
      label(for="thumbnail") Ảnh
      input(
          type="file"
          id="thumbnail"
          name="thumbnail"
          class="form-control-file"
          accept="image/*"
          upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class = "image-preview"
      )
      span(
        class="close-Button"
        close-image) x
    div(class="form-group")
      label(for="position") Vị trí
      input(
          type="number"
          id="position"
          name="position"
          class="form-control"
          placeholder="tự động tăng"
          min="1"
      )
    div(class="form-group form-check form-check-inline")
      input(
          type="radio"
          id="statusActive"
          name="status"
          class="form-check-input"
          value="active"
          checked      
      )
      label(for="statusActive" class="form-checked-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
          type="radio"
          id="statusInActive"
          name="status"
          class="form-check-input"
          value="inactive"     
      )
      label(for="statusInActive" class="form-checked-label") Dừng hoạt động 
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới       

  script(src="/admin/js/product.js")
